<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arturo.dtp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DTP"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" />
        <activity android:name=".RankingEmpresas" />
        <activity
            android:name=".Reporte"
            android:label="@string/title_activity_reporte"
            android:parentActivityName=".DTP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arturo.dtp.DTP" />
        </activity>
        <activity
            android:name=".Evaluacion"
            android:label="@string/title_activity_evaluacion"
            android:parentActivityName=".DTP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arturo.dtp.DTP" />
        </activity>
    </application>

</manifest>
